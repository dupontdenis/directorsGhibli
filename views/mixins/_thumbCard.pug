mixin thumbCard(film)
  .col-md-4
    .card.mb-4.shadow-sm
      img(src=film.image, alt="")
      .card-body
        .card-text #{film.title}
        .card-text.mb-4 #{film.director}
        .d-flex.justify-content-between.align-items-center
          .btn-group
            a(href=`https://ghibliapi.herokuapp.com/films/${film.id}`)
              button.btn.btn-sm.btn-outline-secondary View
          small.text-muted #{film.original_title}